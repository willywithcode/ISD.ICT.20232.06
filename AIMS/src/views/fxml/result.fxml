<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="1366.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <HBox layoutX="-1.0" prefHeight="100.0" prefWidth="1366.0" style="-fx-background-color: #B4EDE3;">
         <children>
              <Label fx:id="pageTitle" alignment="CENTER" contentDisplay="CENTER" prefHeight="100.0" prefWidth="314.0" text="Payment" textAlignment="CENTER">
                  <font>
                      <Font name="SansSerif Bold" size="32.0" />
                  </font>
              </Label>
         </children>
      </HBox>
        <Label fx:id="resultLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="365.0" layoutY="248.0" prefHeight="59.0" prefWidth="657.0" text="PAYMENT RESULT!" textFill="#13c0a1">
            <font>
                <Font name="SansSerif Bold" size="52.0" />
            </font>
        </Label>
        <Label fx:id="messageLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="373.0" layoutY="353.0" prefHeight="216.0" prefWidth="657.0" text="Message" wrapText="true">
            <font>
                <Font name="SansSerif Regular" size="32.0" />
            </font>
        </Label>
        <Button fx:id="okButton" alignment="CENTER" contentDisplay="CENTER" layoutX="553.0" layoutY="594.0" mnemonicParsing="false" onMouseClicked="#confirmPayment" prefHeight="46.0" prefWidth="316.0" style="-fx-background-color: #B4EDE3;" text="OK">
            <font>
                <Font name="SansSerif Bold" size="24.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
